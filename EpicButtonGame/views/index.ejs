<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Epic Button Game</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type ="text/javascript">
        $(document).ready(function (){

            var socket = io();

            $('#count').click(function(event){
                event.preventDefault();

                socket.emit('count');
            });
                socket.on('counter', function(data){
                $('.card-header').html(`The button has been pushed ${data.num} time(s) `)
            })
            $(`#reset`).click(function(event){
                event.preventDefault();

                socket.emit('reset')
            })

                // $('#card-header').html(`your number is ${counter.num}`)       
            
    })
    </script>
</head>
<body>
    <div class="card">
        <h5 class="card-header"></h5>
        <div class="card-body">
            <button type="button" class="btn btn-primary" id='count'>Push the epic button</button>
            <button type="button" class="btn btn-primary" id='reset'>Reset</button>
        </div>
    </div>
</body>
</html>